<Window x:Class="Anamnesis.SplashWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
		xmlns:gif="http://wpfanimatedgif.codeplex.com"
		xmlns:cm3="clr-namespace:Anamnesis.WpfStyles.Controls;assembly=Styles"
		mc:Ignorable="d"
		Height="120"
		Width="120"
		ResizeMode="NoResize"
		WindowStyle="None"
		Background="Transparent"
		AllowsTransparency="True"
		Title="Starting..."
		WindowStartupLocation="CenterScreen"
		MouseDown="OnMouseDown"
		Icon="/Assets/Concept Matrix.ico">


	<Grid Width="100" Height="100" Margin="10">

		<Ellipse Fill="#262626">
			<Ellipse.Effect>
				<DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.75"/>
			</Ellipse.Effect>
		</Ellipse>

		<ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}" Foreground="AliceBlue" IsIndeterminate="True" Width="100" Height="100"/>
		<Image Grid.Row="0" Source="Assets/Concept Matrix.png" Width="100" Height="100" Margin="0,0,0,0"/>
	</Grid>
</Window>