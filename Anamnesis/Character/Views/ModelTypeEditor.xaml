<UserControl x:Class="Anamnesis.Character.Views.ModelTypeEditor"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:XivToolsWpf="clr-namespace:XivToolsWpf.Controls;assembly=XivToolsWpf"
			 mc:Ignorable="d" 
			 Loaded="OnLoaded"
			 DataContextChanged="OnDataContextChanged"
			 d:DesignHeight="450" d:DesignWidth="800">
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<XivToolsWpf:NumberBox Value="{Binding ModelType}" Minimum="0" Maximum="10000" Buttons="True"/>
		<TextBlock Margin="3, 0, 0, 0" x:Name="ModelName" Grid.Row="1" Grid.ColumnSpan="2" FontSize="10"/>

	</Grid>
</UserControl>
